# ===========================================
# CueSports Africa - Environment Configuration
# ===========================================

# Application
APP_NAME="CueSports Africa"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_NG

# Maintenance
APP_MAINTENANCE_DRIVER=file

# ===========================================
# Server Configuration
# ===========================================

# Octane (FrankenPHP)
OCTANE_SERVER=frankenphp
OCTANE_HTTPS=false
OCTANE_WORKERS=auto
OCTANE_MAX_REQUESTS=1000

# Ports (for Docker)
APP_PORT=8000
FRONTEND_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443

# ===========================================
# Database Configuration
# ===========================================

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=cuesports
DB_USERNAME=cuesports
DB_PASSWORD=secret
FORWARD_DB_PORT=5432

# ===========================================
# Redis Configuration
# ===========================================

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
FORWARD_REDIS_PORT=6379

# ===========================================
# Cache & Session
# ===========================================

CACHE_STORE=redis
CACHE_PREFIX=cuesports_

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ===========================================
# Queue Configuration
# ===========================================

QUEUE_CONNECTION=redis
HORIZON_MEMORY_LIMIT=128
HORIZON_MAX_PROCESSES=10
HORIZON_BALANCE=auto

# ===========================================
# Broadcasting (Pusher/WebSockets)
# ===========================================

BROADCAST_CONNECTION=pusher

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ===========================================
# Mail Configuration
# ===========================================

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@cuesports.africa"
MAIL_FROM_NAME="${APP_NAME}"

# Mailpit UI (for development)
MAILPIT_UI_PORT=8025

# ===========================================
# Storage / Cloudinary
# ===========================================

FILESYSTEM_DISK=local

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_URL=cloudinary://API_KEY:API_SECRET@CLOUD_NAME
CLOUDINARY_UPLOAD_PRESET=
CLOUDINARY_SECURE=true
CLOUDINARY_FOLDER=cuesports

# MinIO (S3-compatible for development)
AWS_ACCESS_KEY_ID=cuesports
AWS_SECRET_ACCESS_KEY=cuesportssecret
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=cuesports
AWS_ENDPOINT=http://minio:9000
AWS_USE_PATH_STYLE_ENDPOINT=true
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# ===========================================
# Payment - M-Pesa (Daraja API)
# ===========================================

# Environment: 'sandbox' or 'production'
DARAJA_ENVIRONMENT=sandbox

# API Credentials (from Safaricom Developer Portal)
DARAJA_CONSUMER_KEY=
DARAJA_CONSUMER_SECRET=

# Business Short Code (Paybill/Till Number)
DARAJA_SHORTCODE=
DARAJA_PASSKEY=

# B2C Configuration (for payouts)
DARAJA_B2C_SHORTCODE=
DARAJA_INITIATOR_NAME=
DARAJA_INITIATOR_PASSWORD=
DARAJA_SECURITY_CREDENTIAL=

# Callback URLs (must be publicly accessible)
DARAJA_STK_CALLBACK_URL=/api/payments/mpesa/callback
DARAJA_B2C_RESULT_URL=/api/payouts/mpesa/result
DARAJA_B2C_TIMEOUT_URL=/api/payouts/mpesa/timeout

# ===========================================
# Logging
# ===========================================

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===========================================
# Security
# ===========================================

BCRYPT_ROUNDS=12

# Passport OAuth
PASSPORT_PERSONAL_ACCESS_CLIENT_ID=
PASSPORT_PERSONAL_ACCESS_CLIENT_SECRET=

# ===========================================
# Pulse Monitoring
# ===========================================

PULSE_ENABLED=true
PULSE_DOMAIN=
PULSE_PATH=pulse

# ===========================================
# Frontend URLs
# ===========================================

FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# ===========================================
# Additional Settings
# ===========================================

VITE_APP_NAME="${APP_NAME}"
